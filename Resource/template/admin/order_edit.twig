{% if Order.id %}
<script>
    $(function () {
        // ページ最下部に移動
        $('#univapay-info').appendTo($('#form1 > div.c-contentsArea__cols > div > div'));

        $('#univapay-info__body button').prop('disabled', true);

        // 決済状況取得
        $.ajax({
            type: 'GET',
            url: '{{ url('univapay_admin_order_get', { id: Order.id }) }}',
        }).always(function(e) {
            $('#univapay-status').text(e.value);
            switch(e.name) {
                case "AUTHORIZED":
                    $('#univapay-action__capture').prop('disabled', false)
                    $('#univapay-action__cancel').prop('disabled', false)
                    break;
                case "SUCCESSFUL":
                    $('#univapay-action__cancel').prop('disabled', false)
                    break;
            }
        });

        // キャプチャ
        $('#univapay-action__capture').on('click', function () {
            $('#univapay-info__body button').prop('disabled', true);
            $.ajax({
                type: 'POST',
                url: '{{ url('univapay_admin_order_change', { id: Order.id }) }}',
                data: {action: "capture"}
            }).always(function () {
                location.href = location.href;
            });
        });

        // 取り消し
        $('#univapay-action__cancel').on('click', function () {
            $('#univapay-info__body button').prop('disabled', true);
            $.ajax({
                type: 'POST',
                url: '{{ url('univapay_admin_order_change', { id: Order.id }) }}',
                data: {action: "cancel"}
            }).always(function () {
                location.href = location.href;
            });
        });
    });
</script>
<div class="d-none">
    <div id="univapay-info" class="card rounded border-0 mb-4">
        <div class="card-header">
            <div class="row">
                <div class="col-8">
                    <span class="card-title">{{ 'univapay.admin.order_edit.title'|trans }}</span>
                </div>
                <div class="col-4 text-right"><a data-toggle="collapse" href="#univapay-info__body"
                                                 aria-expanded="false" aria-controls="univapay-info__body"><i
                                class="fa fa-angle-up fa-lg"></i></a></div>
            </div>
        </div>
        <div class="collapse show ec-cardCollapse" id="univapay-info__body">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-2"><span>{{ 'univapay.admin.order_edit.payment_status'|trans }}</span></div>
                    <div class="col" id="univapay-status"></div>
                </div>
                <div class="row mb-2">
                    <div class="col-2"><span>{{ 'univapay.admin.order_edit.payment_action'|trans }}</span></div>
                    <div class="col">
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <button id="univapay-action__capture" type="button"
                                        class="btn btn-ec-regular px-5">
                                    {{ 'univapay.admin.order_edit.payment_action_capture'|trans }}
                                </button>
                            </li>
                            <li class="list-inline-item">
                                <button id="univapay-action__cancel" type="button"
                                        class="btn btn-ec-regular px-5">
                                    {{ 'univapay.admin.order_edit.payment_action_cancel'|trans }}
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}
